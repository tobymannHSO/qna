<% status_options = Question::VALID_STATUSES %>

<h1>What is your question?</h1>
<%= form_with model: @question do |form| %>
  <div>
    <%= form.label :header %><br>
    <%= form.text_field :header %>
    <% @question.errors.full_messages_for(:header).each do |message| %>
      <p style="color: red;"><%= message %></p>
    <% end %>
  </div>
  <div>
    <%= form.label :body %><br>
    <%= form.text_area :body %>
  </div>
  <div>
    <%= form.label :status %><br>
    <%= form.select :status, status_options, selected: status_options.first %>
  </div>
  <div class="submit">
    <%= form.submit %>
  </div>
<% end %>